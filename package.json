{
  "name": "react-vite-typescript-tailwind-boilerplate",
  "description": "This is a boilerplate made with Vite, React, TypeScript, Vitest, Testing Library, Tailwind, Eslint, Prettier, Nx, and pnpm.",
  "version": "0.0.1",
  "author": "Domenico Colandrea <domenic.colandrea@gmail.com>",
  "private": true,
  "scripts": {
    "preview": "vite preview",
    "dev": "nx exec -- vite",
    "build": "nx exec -- concurrently --prefix-colors cyan,green,magenta \"pnpm:build:*\"",
    "build:app": "nx exec -- tsc && vite build",
    "build:lint": "nx exec -- eslint --fix --color .",
    "test": "nx exec -- vitest",
    "test:ui": "nx exec -- vitest --ui",
    "lint": "nx exec -- eslint --fix --color .",
    "prettier": "nx exec -- prettier --ignore-path ./.eslintignore --write .",
    "clean": "concurrently --prefix-colors cyan,green,magenta \"pnpm:clean:*\"",
    "clean:dist": "rimraf dist",
    "clean:node_modules": "rimraf node_modules",
    "preinstall": "npx only-allow pnpm",
    "git-hooks": "git config core.hooksPath ./git-hooks"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^18.17.0",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitest/ui": "^0.34.1",
    "autoprefixer": "^10.4.14",
    "concurrently": "^7.6.0",
    "cross-var": "^1.1.0",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "happy-dom": "^10.8.0",
    "nx": "^16.6.0",
    "postcss": "^8.4.27",
    "prettier": "3.0.1",
    "rimraf": "^4.4.1",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.8",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.1"
  },
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "{projectRoot}/dist",
          "{projectRoot}/public"
        ]
      }
    }
  }
}
